<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/settings_contact"
            android:layout_alignBottom="@+id/settings_contact"
            android:layout_alignEnd="@+id/textView7"
            android:layout_alignRight="@+id/textView7"
            android:text="Contact:" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/settings_email"
            android:layout_alignBottom="@+id/settings_email"
            android:layout_marginEnd="17dp"
            android:layout_marginRight="17dp"
            android:layout_toLeftOf="@+id/settings_email"
            android:layout_toStartOf="@+id/settings_email"
            android:text="Email:" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/settings_image"
            android:layout_toLeftOf="@+id/settings_save"
            android:layout_toStartOf="@+id/settings_save"
            android:text="Profile Image" />

        <Button
            android:id="@+id/settings_save"
            android:layout_width="63dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/settings_contact"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/settings_contact"
            android:layout_marginBottom="40dp"
            android:text="Save"
            tools:layout_editor_absoluteX="233dp"
            tools:layout_editor_absoluteY="412dp" />

        <EditText
            android:id="@+id/settings_contact"
            android:layout_width="293dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/settings_email"
            android:layout_alignStart="@+id/settings_email"
            android:layout_below="@+id/settings_email"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:hint="Phone Number (optional)"
            android:inputType="phone"
            android:text="" />

        <ImageButton
            android:id="@+id/settings_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/settings_email"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/settings_email"
            android:layout_marginTop="24dp"
            android:contentDescription="Add a profile image"
            app:srcCompat="@android:drawable/ic_menu_add" />

        <EditText
            android:id="@+id/settings_email"
            android:layout_width="293dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/settings_image"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="Enter your email"
            android:inputType="textEmailAddress"
            android:text="" />

        <CheckBox
            android:id="@+id/msgNotifCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/settings_contact"
            android:layout_alignRight="@+id/settings_contact"
            android:layout_below="@+id/settings_contact"
            android:layout_marginTop="23dp"
            android:text="Message Notifications" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>