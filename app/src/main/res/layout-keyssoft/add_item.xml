<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/add_main_image"
                android:layout_width="match_parent"
                android:layout_height="215dp"
                android:scaleType="fitCenter"
                app:srcCompat="@android:drawable/ic_menu_add" />

            <RelativeLayout
                android:id="@+id/extra_images"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/extra_image4"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="31dp"
                    android:layout_marginRight="31dp"
                    app:srcCompat="@android:color/transparent" />

                <ImageView
                    android:id="@+id/extra_image3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="45dp"
                    android:layout_marginStart="45dp"
                    android:layout_toEndOf="@+id/extra_image2"
                    android:layout_toRightOf="@+id/extra_image2"
                    app:srcCompat="@android:color/transparent" />

                <ImageView
                    android:id="@+id/extra_image1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="45dp"
                    android:layout_marginStart="45dp" />

                <ImageView
                    android:id="@+id/extra_image2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="45dp"
                    android:layout_marginStart="45dp"
                    android:layout_toEndOf="@+id/extra_image1"
                    android:layout_toRightOf="@+id/extra_image1" />

                <EditText
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/extra_image3"
                    android:ems="10"
                    android:inputType="text"
                    android:text="Name of Item" />

                <EditText
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/title"
                    android:ems="10"
                    android:inputType="textMultiLine"
                    android:lines="3"
                    android:text="Description" />

                <CheckBox
                    android:id="@+id/foodCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/extra_image1"
                    android:layout_alignStart="@+id/extra_image1"
                    android:layout_below="@+id/description"
                    android:text="Food" />

                <CheckBox
                    android:id="@+id/booksCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/ClothingCheck"
                    android:layout_alignStart="@+id/ClothingCheck"
                    android:layout_below="@+id/description"
                    android:text="Books" />

                <CheckBox
                    android:id="@+id/techCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/foodCheck"
                    android:layout_alignStart="@+id/foodCheck"
                    android:layout_below="@+id/foodCheck"
                    android:text="Tech" />

                <CheckBox
                    android:id="@+id/ClothingCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/extra_image3"
                    android:layout_alignStart="@+id/extra_image3"
                    android:layout_below="@+id/booksCheck"
                    android:text="Clothing" />

                <Button
                    android:id="@+id/setLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/techCheck"
                    android:layout_alignStart="@+id/techCheck"
                    android:layout_below="@+id/techCheck"
                    android:layout_marginTop="24dp"
                    android:text="Set Location" />

                <Button
                    android:id="@+id/post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/ClothingCheck"
                    android:layout_alignStart="@+id/ClothingCheck"
                    android:layout_alignTop="@+id/setLocation"
                    android:text="Post" />
            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>